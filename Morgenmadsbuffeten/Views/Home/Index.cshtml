@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <div class="row">
            <div class="col-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Reception" asp-action="Index">
                        <img class="center-block img-responsive" src="~/images/reception.png" alt="Reception button"/>
                        <h4>Reception</h4>
                    </a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Restaurant" asp-action="Index">
                        <img class="center-block img-responsive" src="~/images/restuarant.png" alt="Restaurant button"/>
                        <h4>Restaurant</h4>
                    </a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Kitchen" asp-action="Index">
                        <img class="center-block img-responsive" src="~/images/kitchen.png" alt="Kitchen button"/>
                        <h4>Kitchen</h4>
                    </a>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Admin" asp-action="ManageUsers">
                        <img class="center-block img-responsive" src="~/images/admin.png" alt="Admin button"/>
                        <h4>Admin</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
