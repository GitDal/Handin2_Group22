
@{
    ViewData["Title"] = "Reception";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div>
    <br />
    <div class="text-center">
        <div class="row">
            <div class="col-sm-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Reception" asp-action="IndicateExpectedGuests">
                        <img class="center-block img-responsive" src="images/calendar.png" alt="Indicate button" />
                        <h4>Indicate Expected Guests</h4>
                    </a>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="hotelButton">
                    <a asp-controller="Reception" asp-action="ListRestaurantCheckIns">
                        <img class="center-block img-responsive" src="images/list.png" alt="List button" />
                        <h4>List Check Ins Today</h4>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-lg-3">
                <div class="hotelButton navButton">
                    <a asp-controller="Home" asp-action="Index">
                        <img class="center-block img-responsive" src="images/goback.png" alt="Go back button" />
                        <h4>Back</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

