
@{
    ViewData["Title"] = "Restaurant";
}

<h1>Restaurant</h1>
<hr />

<div class="text-center">
    <div class="row">
        <div class="col-6 col-lg-3">
            <div class="hotelButton">
                <a asp-controller="Restaurant" asp-action="CheckInGuests">
                    <img class="center-block img-responsive" src="images/checkin.png" alt="Check Guests In" />
                    <h4>Check in Guests</h4>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 col-lg-3">
            <div class="hotelButton navButton">
                <a asp-controller="Home" asp-action="Index">
                    <img class="center-block img-responsive" src="images/goback.png" alt="Go back button" />
                    <h4>Back</h4>
                </a>
            </div>
        </div>
    </div>
</div>